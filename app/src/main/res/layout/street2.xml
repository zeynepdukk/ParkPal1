<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/park2"
    android:orientation="vertical">

    <Button
        android:id="@+id/parking2_backbutton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="6dp"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/parking2_a1"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/a1_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cartop"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_a2"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/a2_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_a3"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/a3_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_a4"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/a4_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="122dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_b1"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/b1_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_b2"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/b2_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_b3"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/b3_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/parking2_b4"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@android:color/transparent" />
                <ImageView
                    android:id="@+id/b4_imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cartop"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
